@model IEnumerable<Inventories.Models.tblCheckin>
@using Inventories.Models;
@{
    ViewData["Title"] = "Checkins";



    //string[] StateDepartment = (string[])ViewBag.StateDepartment;

    string StartDate = DateTime.Now.ToString("yyyy-MM-dd");
    string EndDate = DateTime.Now.ToString("yyyy-MM-dd");

    string StartCreatedDate = DateTime.Now.ToString("yyyy-MM-dd");
    string EndCreatedDate = DateTime.Now.ToString("yyyy-MM-dd");
    string Reference = "";
    int Contact = 0;
    List<tblContact> Contacts = (List<tblContact>)ViewBag.Contacts;
    int Warehouse = 0;
    List<tblWarehouse> Warehouses = (List<tblWarehouse>)ViewBag.Warehouses;
    int User = 0;
    List<tblUser> Users = (List<tblUser>)ViewBag.Users;
    int Category = 0;
    List<tblCategory> Categories = (List<tblCategory>)ViewBag.Categories;
    


}


<head>

    <style>
        .select2-container {
            width: 100% !important;
        }
    </style>



</head>




<!-- Page Wrapper -->
<div class="content container-fluid">

    <!-- Page Header -->
    <!-- /Page Header -->

    <div class="row" style="display:none;"  id="DivFilters">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm("Marketing", "Reports", FormMethod.Post))
                    {
                        <form>
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Start Date</label>
                                    <input class="form-control" type="date" name="StartDate" value="@StartDate" />
                                </div>
                                <div class="col-md-3">
                                    <label>End Date</label>
                                    <input class="form-control" type="date" name="EndDate" value="@EndDate" />
                                </div>
                                <div class="col-md-3">
                                    <label>Start Created At</label>
                                    <input class="form-control" type="date" name="StartCreatedDate" value="@StartCreatedDate" />
                                </div>
                                <div class="col-md-3">
                                    <label>End Created At</label>
                                    <input class="form-control" type="date" name="EndCreatedDate" value="@EndCreatedDate" />
                                </div>


                            </div><br />
                            <div class="row">
                                <div class="col-md-3">
                                    <label>Reference</label>
                                    <input class="form-control" type="text" name="Reference" value="@Reference" />
                                </div>
                                <div class="col-md-3">
                                    <label>Contact</label>
                                    <select class="form-control" name="Contact">
                                        <option value="">Contact</option>
                                        @foreach (tblContact item in Contacts)
                                        {
                                            if (@Contact == item.ContactId)
                                            {
                                                <option value="@item.ContactId" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ContactId">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>Warehouse</label>
                                    <select class="form-control" name="Warehouse">
                                        <option value="">Warehouse</option>
                                        @foreach (tblWarehouse item in Warehouses)
                                        {
                                            if (@Warehouse == item.WarehouseId)
                                            {
                                                <option value="@item.WarehouseId" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.WarehouseId">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>User</label>
                                    <select class="form-control" name="Warehouse">
                                        <option value="">User</option>
                                        @foreach (tblUser item in Users)
                                        {
                                            if (@User == item.UserId)
                                            {
                                                <option value="@item.UserId" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.UserId">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-3">
                                    <label>Category</label>
                                    <select class="form-control" name="Warehouse">
                                        <option value="">Category</option>
                                        @foreach (tblCategory item in Categories)
                                        {
                                            if (@Category == item.CategoryId)
                                            {
                                                <option value="@item.CategoryId" selected>@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.CategoryId">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>


                            </div><br />
                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-primary" style="float:right;">Search</button>
                                    <a href="@Url.Action("ChickinReport")"><button type="button" class="btn btn-danger" style="margin-right:1%;float:right;">Cancel</button></a>
                                </div>
                            </div>


                        </form>
                    }

                    
                </div>
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="breadcrumb-bar">
                            <div class="container-fluid">
                                <div class="row align-items-center">
                                    <div class="col-md-6 col-6">
                                        <h5 class="breadcrumb-title">Checkin Report</h5>
                                    </div>
                                    <div class="col-md-6 col-6 text-right" id="CreateCheckinB">
                                        <button class="btn btn-primary" id="ShowFilters" style="float:right"><i class="fas fa-toggle-off" id="IShowFilters"> Toggle Form</i> </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="cell-border table table-hover table-center  mb-0 " id="CheckinTable">
                                <thead>
                                    <tr>
                                        <th style="display:none;">Checkin ID</th>
                                        <th>Checkin Date</th>
                                        <th>Contact</th>
                                        <th>Warehouse</th>
                                        <th>Reference</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Inventories.Models.tblCheckin Checkin in Model)
                                    {
                                        <tr>
                                            <td style="display:none;">@Checkin.CheckinId</td>
                                            <td>@Checkin.CheckinDate.ToString("dd-MM-yyyy")</td>
                                            <td>@Checkin.tblContact.Name</td>
                                            <td>@Checkin.tblWarehouse.Name</td>
                                            <td>@Checkin.Reference</td>
                                            <td>@Checkin.Details</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




<!-- /Page Wrapper -->
