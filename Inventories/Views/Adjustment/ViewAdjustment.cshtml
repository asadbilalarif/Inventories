@model  List<Inventories.Models.AdjustmentViewData_Result>
@{
//Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css">
    <title>ViewAdjustment</title>
    <style>
        p {
            margin-top: 0;
            margin-bottom: 0rem;
        }
    </style>
</head>
<body>
    <div class="content container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row" style="border-bottom: 2px solid #dee2e6;">
                    <div class="col-md-6">
                        <h3>Invertories</h3>
                    </div>
                    <div class="col-md-6 text-right">
                        <p>@Model.FirstOrDefault().WarehouseName</p>
                        <p>@Model.FirstOrDefault().WarehouseAddress</p>
                        <p>@Model.FirstOrDefault().WarehousePhone</p>
                        <p>@Model.FirstOrDefault().WarehouseEmail</p>
                        
                    </div>
                </div>
                <div class="row" >
                    <div class="col-md-12 text-center">
                        <h4 style="margin-top:2%;">ADJUSTMENT</h4>
                    </div>
                </div>
                <div class="row" >
                    <div class="col-md-12">
                        <p>Type: @Model.FirstOrDefault().Type</p>
                        <p>Date: @Model.FirstOrDefault().AdjustmentDate.ToString("MMM dd,yyyy")</p>
                        <p>Reference: @Model.FirstOrDefault().Reference</p>
                    </div>
                </div>
                <div class="row" style="margin-top:5%;">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="cell-border table table-hover table-center  mb-0 " id="AdjustmentTable">
                                <thead>
                                    <tr>
                                        <th>Item</th>
                                        <th class="text-right">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Inventories.Models.AdjustmentViewData_Result Adjustment in Model)
                                    {
                                        <tr>
                                            <td>@Adjustment.ItemName</td>
                                            <td class="text-right">@Adjustment.ItemQuantity</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/Content/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
</body>
</html>
