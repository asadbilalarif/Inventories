@model  Inventories.Models.tblUser
@{
    int UserId = 0;
    string username = "";
    string Name = "";
    string Phone= "";
    string Email = "";
    int? RoleId = 0;
    int? WarehouseId = 0;

    if (Model != null)
    {
        UserId = Model.UserId;
        username = Model.Username;
        Name = Model.Name;
        Phone = Model.Phone;
        Email = Model.Email;
        RoleId = Model.RoleId;
        WarehouseId = Model.Warehouse;
    }



}
<head>
    @*<link href="~/Theme/template/admin/assets/css/select2.min.css" rel="stylesheet" />*@

</head>

<!-- Page Wrapper -->
<div class="content container-fluid">

    <!-- Page Header -->
    <!-- /Page Header -->

    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("CreateUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {@Html.AntiForgeryToken()
            <div class="card">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="breadcrumb-bar">
                            <div class="container-fluid">
                                <div class="row align-items-center">
                                    <div class="col-md-6 col-6">
                                        @if (Model == null)
                                        {
                                            <h5 class="breadcrumb-title">Create User</h5>
                                        }
                                        else
                                        {
                                            <h5 class="breadcrumb-title">Edit User</h5>
                                        }
                                    </div>
                                    <div class="col-md-6 col-6 text-right" id="CreateUserB">

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <div class="card-body">
                    <span style="color:red;">@ViewBag.Error</span>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <input type="text" class="form-control" style="display:none;" name="UserId" value="@UserId" required>
                                <label>User Name<span style="color:red;">*</span></label>
                                <input type="text" class="form-control" name="username" value="@username" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Name<span style="color:red;">*</span></label>
                                <input type="text" class="form-control" id="Name" name="Name" value="@Name" required>
                            </div>
                        </div>
                        

                    </div>

                    <div class="row">


                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" class="form-control" id="Phone" name="Phone" value="@Phone">
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Warehouse<span style="color:red;">*</span> <small id="LblWarehouseError" style="display:none; color:red;">Warehouse Must be selected!!!</small></label><br />
                                <select class="form-control" id="Warehouse" name="Warehouse" required>
                                    <option value="0">Select Warehouse</option>
                                    @*@foreach (Inventories.Models.tblRole Role in @ViewBag.Roles)
                    {
                        if (@Role.RoleId == RoleId)
                        {
                            <option value="@Role.RoleId" selected>@Role.Role</option>
                        }
                        else
                        {
                            <option value="@Role.RoleId">@Role.Role</option>
                        }
                    }*@
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Email<span style="color:red;">*</span></label>
                                <input type="text" class="form-control" id="Email" name="Email" value="@Email" required>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                @if (Model == null)
                                {
                                    <label>Password<span style="color:red;">*</span></label>
                                    <input type="password" class="form-control" id="Password" name="Password" value="" required>
                                }
                                else
                                {
                                    <label>Password</label>
                                    <input type="password" class="form-control" id="Password" name="Password" value="">
                                }

                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Role<span style="color:red;">*</span> <small id="LblRoleError" style="display:none; color:red;">Role Must be selected!!!</small></label><br />
                                <select class="form-control" id="Role" name="RoleId" required>
                                    @foreach (Inventories.Models.tblRole Role in @ViewBag.Roles)
                                    {
                                        if (@Role.RoleId == RoleId)
                                        {
                                            <option value="@Role.RoleId" selected>@Role.Role</option>
                                        }
                                        else
                                        {
                                            <option value="@Role.RoleId">@Role.Role</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label></label>
                                <button class="btn btn-primary" type="submit" id="SaveChanges" style="margin-top:10%;">Save</button>
                                <a href="@Url.Action("CreateUser","User",new { id=0})"> <input class="btn btn-danger" type="button" style="margin-top:10%;" value="Cancel"></a>
                                <a href="@Url.Action("Users","User")" class="btn btn-secondary" style="margin-top:10%;"><i class="fa fa-list"></i> List</a>
                            </div>
                        </div>

                    </div>


                </div>
            </div>


        }
        </div>
    </div>

</div>

<!-- /Page Wrapper -->
@*<script src="~/Theme/template/admin/assets/js/jquery-3.2.1.min.js"></script>*@
<script src="~/Content/assets/js/jquery-3.5.1.js"></script>