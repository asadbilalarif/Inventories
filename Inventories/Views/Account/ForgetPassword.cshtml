
@{
    Layout = null;
    string Succ = @ViewBag.Success;
    string Delete = @ViewBag.Error;

    HttpCookie Scookie = Request.Cookies["Setting"];
    string Color = Scookie["Color"];
    string HoverColor = Scookie["HoverColor"];
    string Name = Scookie["Name"];
}

<!DOCTYPE html>
<html lang="en">

<!-- Mirrored from doccure-html.dreamguystech.com/template/admin/forgot-password.html by HTTrack Website Copier/3.x [XR&CO'2014], Mon, 05 Jul 2021 15:18:07 GMT -->
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>WSA - Forgot Password</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/Content/assets/img/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/font-awesome.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/Content/assets/css/style.css">

    <!--[if lt IE 9]>
        <script src="~/Content/assets/js/html5shiv.min.js"></script>
        <script src="~/Content/assets/js/respond.min.js"></script>
    <![endif]-->

    <style>
        .login-wrapper .loginbox .login-left {
            background: linear-gradient(180deg, @HoverColor, @Color);
        }
        .btn-primary {
            background-color: @Color;
            border: 1px solid @Color;
            /*background-color: #00d0f1;*/
            /*border: 1px solid #00d0f1;*/
        }

            .btn-primary:hover,
            .btn-primary:focus,
            .btn-primary.active,
            .btn-primary:active,
            .open > .dropdown-toggle.btn-primary {
                background-color: @HoverColor;
                border: 1px solid @HoverColor;
                /*background-color: #374151;
	border: 1px solid #374151;*/
            }

        .btn-primary.active:not(:disabled):not(.disabled),
        .btn-primary:active:not(:disabled):not(.disabled),
        .show > .btn-primary.dropdown-toggle {
            background-color: @HoverColor;
            border-color: @HoverColor;
            color: #fff;
        }


        .btn-primary.disabled, .btn-primary:disabled {
            background-color: @HoverColor;
            border-color: @HoverColor;
            color: #fff;
        }
    </style>
</head>
<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <h1 style="color:white;text-align:center">@Name</h1>
                        @*<img class="img-fluid" src="~/Content/assets/img/logo-white.png" alt="Logo">*@
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <div style="display:none;" class="alert alert-success alert-dismissible fade show" id="SuccessAlert" role="alert">
                                @ViewBag.Success
                            </div>
                            <div style="display:none;" class="alert alert-danger alert-dismissible fade show" id="error" role="alert">
                                @ViewBag.Error
                            </div>
                            <h1>@Resource.Forgot_Password?</h1>
                            <p class="account-subtitle">@Resource.Enter_your_email_to_get_a_password_reset_link</p>

                            <!-- Form -->
                            @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {@Html.AntiForgeryToken()
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="@Resource.Email" name="Email" required>
                            </div>
                            <div class="form-group mb-0">
                                <button class="btn btn-primary btn-block" type="submit">@Resource.Reset_Password</button>
                            </div>
                        }
                            <!-- /Form -->

                        <div class="text-center dont-have">@Resource.Remember_your_password? <a href="@Url.Action("Login","Account")">@Resource.Login</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/Content/assets/js/popper.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Content/assets/js/script.js"></script>

    <script>

        $(document).ready(function () {
             if ("@Succ"!="") {
            $('#SuccessAlert').fadeIn();
            $('#SuccessAlert').fadeOut(10000);
            }
            else {
                $('#SuccessAlert').fadeOut();
            }
            if ("@Delete" != "") {
                $('#error').fadeIn();
                $('#error').fadeOut(10000);
            }
            else {
                $('#error').fadeOut();
            }

        });
    </script>

</body>

